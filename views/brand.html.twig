{% extends 'index.html.twig' %}

{% block content %}
    <h2>{{ brand.getName }}</h2>

    {% if stores is not empty %}
        <p>Here are the stores that sell this shoe: </p>
        <ul>
            {% for store in stores %}
                <li>{{ store.getName }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h3>Add a store that sells this brand: </h3>

    <form action='/add_store' method='post'>
        <input id='brand_id' type=hidden name='brand_id' value='{{ brand.getId }}'>
        <label for='store_id'>Select a store</label>
        <select id'store_id' name='store_id' type='text'>
            {% for store in all_stores %}
                <option value='{{ store.getId }}'> {{ store.getName }}</option>
            {% endfor %}
        </select>
        <button type='submit'>Add store</button>
    </form>
    <p><a href="/brands/{{ brand.getId }}/edit">Edit this shoe</a></p>
    <p><a href='/'>Home</a></p>
{% endblock %}
